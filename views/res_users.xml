<openerp>
    <data>

<act_window name="Student" res_model="res.users" view_mode="tree,form" id="action_examin_student" context="{'default_groups_ref':['examin.group_examin_student','base.group_user']}"></act_window>


<menuitem name="Student" parent="configuration_main_menu" sequence="4" action="action_examin_student" id="examin_student_menu" groups="examin.group_examin_teacher"></menuitem>

<record model="ir.ui.view" id="view_examin_student_tree">
    <field name="name">examin.student.tree</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"></field>
            <field name="ref_id"></field>
        </tree>
    </field>
</record>


<record model="ir.ui.view" id="view_examin_student_form">
    <field name="name">examin.student.form</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
        <form action="">
            <sheet>
                <field name="image" widget="image" class="oe_avatar"></field>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Name"></field>
                    </h1>
                    <field name="ref_id" placeholder="Ref Id"></field>
                    <!-- <field name="login" invisible="1"></field> -->
                </div>
                <group>
                    <group>
                        <!-- <field name="gender"></field> -->
                    </group>
                </group>
                <notebook>
                    <page string="Exams" class="oe_read_only">
                        <field name="exams"></field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>

<record model="ir.actions.act_window.view" id="action_examin_student_form">
    <field name="act_window_id" ref="action_examin_student"></field>
    <field name="sequence" eval="20"></field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_examin_student_form"></field>
</record>

<record model="ir.actions.act_window.view" id="action_examin_student_tree">
    <field name="act_window_id" ref="action_examin_student"></field>
    <field name="sequence" eval="10"></field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="view_examin_student_tree"></field>
</record>

    </data>
</openerp>